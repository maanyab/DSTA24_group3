version: "3.8"

services:
		web:
			build: .
			ports:
				- "5000:5000"
			volumes:
				- model:/app/model
		
			env_file:
				- .env
			depends_on:
				- db

		db:
			image: postgres:13
			env_file:
				- .env
			ports:
				- "5432:5432"
			volumes:
				- postgres_data:/var/lib/postgresql/data

			healthcheck:
				test:["CMD-SHELL", "pg_isready -U postgres"]
				interval:10s
				timeout:5s
				retries:5
	
volumes:
	model
	postgres_data
